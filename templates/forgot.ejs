<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="register.css">
    </head>

    <body>
        <div class="container">
            <h1>Reset Password</h1>
            <form action="/resetPassword" method="post">
                
                <label for="username">Username:</label>
                <input type="text" name="user" size="50">
                <br>
                <br>
                <label for="password1">New password:</label>
                <input type="password" name="password" id="pass1" size="50">
                <br>
                <br>
                <label for="password2">Re-enter new password:</label>
                <input type="password" id="pass2" size="50">
                <br>
                <br>
                <input type="submit" id="register" value="Reset My Password">
                <br>
                <br>
                <br>
                <span class="account"><a href="/">Remember your password?</a></span> <br><br>
                
                <script>
                    document.querySelector("#reset").onclick = () => {
                        var pass1 = document.querySelector("#pass1").value;
                        var pass2 = document.querySelector("#pass2").value;
                        console.log(pass1);
                        console.log(pass2);
                        
                        if(pass1 !== pass2) {
                            event.preventDefault();
                            window.alert("Passwords do not match!");
                        }
                    }
                </script>
            </form>

        </div>
    </body>
</html>